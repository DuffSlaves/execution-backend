
if [ ! -f ".status/apt-get" ]; then	
	# Mono repository keys
	apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 3FA7E0328081BFF6A14DA29AA6A19B38D3D831EF
	echo "deb http://download.mono-project.com/repo/debian wheezy main" | tee /etc/apt/sources.list.d/mono-xamarin.list
	
	# All apt-get requirements
	apt-get -qq update
	apt-get -qq -y install nodejs npm git p7zip-full gcc 
	apt-get -qq -y install ghc cabal-install
	apt-get -qq -y install open-cobol libgmp3-dev libmpfr-dev mpc libmpc-dev g++-multilib 
	apt-get -qq -y install python3 python-pip
	apt-get -qq -y install maven cmake 
	apt-get -qq -y install mono-devel
	apt-get -qq -y install default-jdk default-jre
	echo "" > .status/apt-get
fi
