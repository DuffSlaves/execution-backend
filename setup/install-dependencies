
if [ ! -f ".status/apt-get" ]; then	
	# Mono repository keys
	apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 3FA7E0328081BFF6A14DA29AA6A19B38D3D831EF
	echo "deb http://download.mono-project.com/repo/debian wheezy main" | tee /etc/apt/sources.list.d/mono-xamarin.list
	
	# All apt-get requirements
	apt-get -qq update
	apt-get -q -y install nodejs npm git p7zip-full gcc m4 \
		python3 python-pip \
		maven cmake \
		mono-devel \
		default-jdk default-jre \
		ruby-full \
		closure-compiler
	#apt-get -q -y install open-cobol libgmp3-dev libmpfr-dev mpc libmpc-dev g++-multilib
	echo "" > .status/apt-get
fi
